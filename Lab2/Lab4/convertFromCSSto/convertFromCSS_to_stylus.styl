body
    background linear-gradient(45deg, #185C94, #2B4A63, #042E50, #60A3DB, #90B9DB)

main
    max-width 50%
    text-align justify
    margin auto

.menu
    list-style-type none
    margin 0
    padding 0
    overflow hidden
    background linear-gradient(60deg, #185C94, #2B4A63, #042E50, #60A3DB, #90B9DB)
    border-radius 10px
    li
        float left
        a
            color rgb(0, 1, 2)
            display block
            text-align center
            padding 14px 16px
            text-decoration none
            outline none
            position relative
            -webkit-transition 0.3s
            transition 0.3s
            padding 10px
            &:before
                content ''
                border-bottom 2px solid #000
                padding 0 10px
                position absolute
                bottom 0
                left 0
                right 0
                margin 0 auto
                width 0
                -webkit-transition 0.3s
                transition 0.3s
            &:hover
                &::before
                    width 100%
                    padding 0
            &:active
                background rgb(9, 207, 98)
                -webkit-transition none
                transition none
    .border
        padding-top 17px
        float left
    .test
        line-height 28px

